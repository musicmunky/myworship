
<h3>
    All Tags
    <% if user_signed_in? and current_user.has_role? :admin %>
		<%= link_to 'New Tag', new_tag_path, { class: "btn btn-default btn-xs", style: "float:right;margin-top:2px;" } %>
	<% end %>
</h3>

<table class="table">
  <thead>
    <tr>
      <th style="font-weight:bold;">Tag Name</th>
    <% if user_signed_in? and current_user.has_role? :admin %>
      <th colspan="2"></th>
	<% end %>
    </tr>
  </thead>

  <tbody>
    <% @tags.each do |tag| %>
      <tr>
        <td><%= tag.name %></td>
<!--        <td><%#= link_to 'Show', tag %></td>-->
    <% if user_signed_in? and current_user.has_role? :admin %>
        <td><%= link_to 'Edit', edit_tag_path(tag) %></td>
        <td><%= link_to 'Delete', tag, method: :delete, data: { confirm: 'Are you sure you want to delete this tag?' } %></td>
	<% end %>
      </tr>
    <% end %>
  </tbody>
</table>
