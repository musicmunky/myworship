<div class="simple-calendar">
	<h2 style="text-align:center;">
	<%= link_to "<span class='glyphicon glyphicon-arrow-left' aria-hidden='true'></span>".html_safe, { start_date: date_range.first - 1.day }, { style: "color:#68a4c4;font-size:25px;" } %>
	<span style="margin-left:15px;margin-right:15px;width:250px;display:inline-block;">
		<%= I18n.t("date.month_names")[start_date.month] %> <%= start_date.year %>
	</span>
	<%= link_to "<span class='glyphicon glyphicon-arrow-right' aria-hidden='true'></span>".html_safe, { start_date: date_range.last + 1.day }, { style: "color:#68a4c4;font-size:25px;" }  %>
	</h2>

<!--	<table class="table table-striped">//-->
	<table class="simple-calendar-table">
		<thead>
			<tr style="height:50px;font-size:18px;">
			<% date_range.slice(0, 7).each do |day| %>
				<th class="simple-calendar-header"><%= I18n.t("date.abbr_day_names")[day.wday] %></th>
			<% end %>
			</tr>
		</thead>

		<tbody>
		<% date_range.each_slice(7) do |week| %>
			<tr>
			<% week.each do |day| %>
				<%= content_tag :td, class: calendar.td_classes_for(day) do %>
					<% if defined?(Haml) && block_is_haml?(block) %>
						<% capture_haml do %>
							<% block.call day, sorted_events.fetch(day, []) %>
						<% end %>
					<% else %>
						<% spn =  "<span class='dayspan badge'>" %>
						<% spn = spn + "<a class='newdaylink' href=\"#{new_attendance_path(:start_time => day)}\">#{day.strftime('%d')}</a></span>" %>
						<% block.call spn.html_safe, sorted_events.fetch(day, []) %>
					<% end %>
				<% end %>
			<% end %>
			</tr>
		<% end %>
		</tbody>
	</table>
</div>
