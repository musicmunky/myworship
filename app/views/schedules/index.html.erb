<p id="notice"><%= notice %></p>

<h3>Listing Schedules</h3>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Schedule date</th>
      <th>Notes</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @schedules.each do |schedule| %>
      <tr>
        <td><%= schedule.name %></td>
        <td><%= schedule.schedule_date %></td>
        <td><%= schedule.notes %></td>
        <td><%= link_to 'Edit', edit_schedule_path(schedule) %></td>
        <td><%= link_to 'Delete', schedule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Schedule', new_schedule_path, { class: "btn btn-success", style: "float:left;width:150px;" } %>
