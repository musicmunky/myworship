<p id="notice"><%= notice %></p>

<h3>Listing Songs</h3>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Author</th>
      <th>Song key</th>
      <th>Capo fret</th>
      <th>Media link</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @songs.each do |song| %>
      <tr>
        <td><%= song.name %></td>
        <td><%= song.author %></td>
        <td><%= song.song_key %></td>
        <td><%= song.capo_fret %></td>
        <td><%= song.media_link %></td>
        <td><%= link_to 'Edit', edit_song_path(song) %></td>
        <td><%= link_to 'Delete', song, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

